<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./style_cadastro.css" />
    <title>Cadastro</title>
  </head>
  <body>
    <header>
      <h2>Cadastro de Pokemons</h2>
      <nav id="menu">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="./cadastro">Cadastrar pokemon</a></li>
          <li><a href="./listaPokemon">Pokedex</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <section id="cadastro">
        <div>
          <% if(pokemon == undefined){ %>

          <h2>Cadastre um pokemon</h2>

          <form action="./add" method="post">
            <label for="nome"> Nome do Pokemon:</label>
            <input type="text" id="nome" name="nome" />

            <label for="tipo"> Tipo:</label>
            <input type="text" id="tipo" name="tipo" />

            <label for="imagem"> Link da imagem:</label>
            <input type="text" id="imagem" name="imagem" />

            <label for="descricao"> Descrição:</label>
            <input type="text" id="descricao" name="descricao" />

            <label for="altura"> Altura:</label>
            <input type="text" id="altura" name="altura" />

            <label for="peso"> Peso:</label>
            <input type="text" id="peso" name="peso" />

            <label for="habilidade"> Habilidade:</label>
            <input type="text" id="habilidade" name="habilidade" />

            <label for="fraqueza"> Fraqueza:</label>
            <input type="text" id="fraqueza" name="fraqueza" />

            <button id="buttonCadastrar" type="submit">Cadastrar</button>
          </form>
          <% }else{ %>

          <h2>Atualize o pokemon</h2>

          <form action="/update/<%=pokemon.id%> " method="post">
            <label for="nome"> Nome do Pokemon:</label>
            <input type="text" id="nome" name="nome" />

            <label for="tipo"> Tipo:</label>
            <input type="text" id="tipo" name="tipo" />

            <label for="imagem"> Link da imagem:</label>
            <input type="text" id="imagem" name="imagem" />

            <label for="descricao"> Descrição:</label>
            <input type="text" id="descricao" name="descricao" />

            <label for="altura"> Altura:</label>
            <input type="text" id="altura" name="altura" />

            <label for="peso"> Peso:</label>
            <input type="text" id="peso" name="peso" />

            <label for="habilidade"> Habilidade:</label>
            <input type="text" id="habilidade" name="habilidade" />

            <label for="fraqueza"> Fraqueza:</label>
            <input type="text" id="fraqueza" name="fraqueza" />

            <button id="buttonAtualizar" type="submit">Atualizar</button>
          </form>
          <% } %>
        </div>
      </section>
    </main>

    <footer>
      <p>Projeto criado por A.Mathias para fins educativos. BlueEdtech</p>
    </footer>
  </body>
</html>
